{
	"C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
	"astyle.astylerc": null,
	"[cpp]": {
		"editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
	},
	"C_Cpp.inlayHints.parameterNames.enabled": true,
	"editor.fontSize": 13,
	"editor.fontFamily": "'Source Code Pro', 'monospace', monospace",
	"workbench.iconTheme": "vscode-icons",
	"telemetry.telemetryLevel": "off",
	"C_Cpp.inlayHints.parameterNames.hideLeadingUnderscores": false,
	"C_Cpp.inlayHints.referenceOperator.enabled": true,
	"workbench.preferredDarkColorTheme": "Gruvbox Dark Hard",
	"workbench.preferredLightColorTheme": "Gruvbox Light Soft",
	"editor.renderWhitespace": "all",
	"vsicons.dontShowNewVersionMessage": true,
	"cmake.configureOnOpen": false,
	"mesonbuild.buildFolder": ".vscode-build",
	"editor.inlayHints.fontSize": 12,
	"editor.codeActionsOnSave": {},
	"editor.minimap.enabled": false,
	"debug.allowBreakpointsEverywhere": true,
	"workbench.startupEditor": "none",
	"workbench.colorTheme": "Gruvbox Dark Hard",
	"C_Cpp.autocompleteAddParentheses": true,
	"qttools.loglevel": "warning",
	"C_Cpp.intelliSenseEngineFallback": "enabled",
	"cmake.buildDirectory": "${workspaceFolder}/.vscode-build/${buildKit}/${buildType}",
	"C_Cpp.intelliSenseEngine": "disabled",
	"C_Cpp.codeAnalysis.clangTidy.enabled": true,
	"clangd.arguments": [
		"-pretty",
		"--background-index"
	],
	"cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
	"C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
		"clang-analyzer-core.*",
		"clang-analyzer-cplusplus.*",
		"clang-analyzer-nullablity.*",
		"bugprone-*",
		"clang-analyzer-unix.*",
		"llvm-include-order",
		"modernize-use-*",
		"performance-*"
	],
	"editor.wordWrapColumn": 100,
	"editor.rulers": [
		100,
	],
	"C_Cpp.clang_format_fallbackStyle": "Microsoft",
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"astyle.c.enable": false,
	"C_Cpp.vcFormat.indent.gotoLabels": "leftmostColumn",
	"editor.indentSize": "tabSize",
	"astyle.cpp.enable": false,
}